<%= render Bootstrap::Layouts::SectionComponent.new id: 'apartment-header', options: { paddings: { xs: { t: '8', b: '3' } } } do %>

  <%= render Bootstrap::Text::ParagraphComponent.new options: { class: 'label mb-4', color: 'muted' } do %>
    <%= 'Amenities' %>
  <% end %>

  <%= render Bootstrap::Layouts::RowComponent.new options: { class: 'mb-6' } do %>
    <% @apartment[:amenities].each do |amenity| %>
      <%= render Bootstrap::Layouts::ColumnComponent.new breakpoints: { xs: 6, md: 4 }, options: { class: 'mb-7 d-flex align-items-center amenities' } do %>
        <%= inline_svg "icons/amenities/#{amenity[:amenity].downcase.underscore}.svg", class: 'icon-lg mr-2' %>
        <small><%= "#{amenity[:text]}" %></small>
      <% end %>
    <% end %>
  <% end %>

<% end %>
